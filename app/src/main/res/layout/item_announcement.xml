<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_line_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anm_image"
            android:layout_width="88dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/announcement_pic_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="电脑发呆是南京的少年犯苏丹诺夫受到罚款呢"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_middle_2_size"/>

            <TextView
                android:id="@+id/anm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="电脑发呆是南京的少年犯苏丹诺夫受到罚款呢"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_small_2_size"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/anm_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中共杭州市委"
                    android:textColor="#959595"/>

                <TextView
                    android:id="@+id/anm_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未读"
                    android:textColor="#959595"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/anm_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-09-10"
                    android:textColor="#959595"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@id/anm_mark"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/anm_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"/>
</FrameLayout>